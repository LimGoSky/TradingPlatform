<Window x:Class="TradingPlatform.View.Login.LoginMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradingPlatform.View.Login"
        mc:Ignorable="d"
        Title="LoginMainView" Height="400" Width="450" WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <!--窗体正宗无边框-->
        <WindowChrome x:Key="WindowChromeKey">
            <WindowChrome.ResizeBorderThickness>
                <Thickness>0</Thickness>
            </WindowChrome.ResizeBorderThickness>
        </WindowChrome>
    </Window.Resources>
    <Grid MouseDown="Grid_MouseDown" RenderTransformOrigin="0.94,0.068" >
        <Image x:Name="BtnClose" Source="/TradingPlatform;component/Styles/images/guanbi.png" Height="15" Width="15" Panel.ZIndex="2" RenderTransformOrigin="9.467,-7.667" Margin="425,3,3,375" MouseLeftButtonDown="BtnClose_MouseLeftButtonDown" Cursor="Hand"  />
        <Frame Grid.Row="1" Source="LoginView.xaml" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
